<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gada.travelgada.mapper.ScheduleMapper">

	<!-- <select id="getSchedule" resultType="com.gada.travelgada.domain.ScheduleVO"> 
		<![CDATA[ select * from schedule ]]> </select> -->

	<select id="selectPlanner"
		resultType="com.gada.travelgada.domain.PlannerVO">
		<![CDATA[
			select * from planner where member_id = #{member_id}
		]]>
	</select>

	<select id="selectCity" resultType="com.gada.travelgada.domain.ScheduleVO">
		<![CDATA[
			select * from schedule where planner_id = #{planner_id} and schedule_type_id = 1
		]]>
	</select>

	<select id="selectVehicle" resultType="com.gada.travelgada.domain.ScheduleVO">
		<![CDATA[
			select * from schedule where planner_id = #{planner_id} and schedule_type_id = 3
		]]>
	</select>

	<select id="selectSchedule" resultType="com.gada.travelgada.domain.ScheduleVO">
		<![CDATA[
			select * from schedule where planner_id = #{planner_id} and schedule_type_id = 4
		]]>
	</select>

	<select id="selectHotel" resultType="com.gada.travelgada.domain.ScheduleVO">
		<![CDATA[
			select * from schedule where planner_id = #{planner_id} and schedule_type_id = 2
		]]>
	</select>

</mapper>
